rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function sameRancho(ranchoId) {
      return signedIn() && (
        request.auth.token.ranchoId == ranchoId ||
        request.auth.token.admin == true
      );
    }

    function anonymousRanchoAccess(ranchoId) {
      return signedIn() &&
        request.auth.token.firebase.sign_in_provider == 'anonymous' &&
        ranchoId == 'Rancho1';
    }

    // Fallback temporal para pruebas cuando Auth no está habilitado en el proyecto.
    // Limítalo a Rancho1 y únicamente a documentos de snapshots.
    function testingRanchoAccess(ranchoId) {
      return ranchoId == 'Rancho1';
    }

    match /ranchos/{ranchoId}/snapshots/{snapshotId} {
      allow read, write: if sameRancho(ranchoId) || anonymousRanchoAccess(ranchoId) || testingRanchoAccess(ranchoId);
    }

    match /ranchos/{ranchoId}/{document=**} {
      allow read, write: if sameRancho(ranchoId) || anonymousRanchoAccess(ranchoId);
    }
  }
}
